<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <ul class="grid list-inline">
        <% @grid.each do |letter| %>
          <li class="letter"><%= letter %></li>
          <% end %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <form action="score">
        <div class="form-group">
          <input type="text" class="guess" id="guess" placeholder="Enter Longest word" name="word">
        </div>
        <input type="hidden" value="<%= @grid.join %>" name="grid">
        <input type="hidden" name="start" value="<%= @time %>">
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
